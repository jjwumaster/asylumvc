datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String       @id @default(uuid())
  name     String       @unique
  avatar   String?
  comment  String?
  year     Int?
  mediaObjects MediaObject[]
}

model MediaObject {
  id          String   @id @default(uuid())
  type        String
  title       String
  creator     String?
  year        Int?
  url         String
  image       String?
  duration    Float?
  comment     String?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())

  @@index([type])
}